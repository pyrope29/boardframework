<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit.board.dao.MemberDao">

	<insert id="insertMember" parameterType="memberDto">
		INSERT INTO BOARD_MEMBER (ID,NAME,PW,EMAIL,BDATE,GENDER,PNUM,ZCODE,ADDR) 
 			VALUES (#{ID},#{NAME},#{PW},#{EMAIL},SYSDATE,#{GENDER},#{PNUM},#{ZCODE},#{ADDR})
	</insert>

	<update id="updateMember" parameterType="memberDto">
		UPDATE BOARD_MEMBER 
			SET ID=#{ID},NAME=#{NAME},PW=#{PW},EMAIL=#{EMAIL},BDATE=#{BDATE},GENDER=#{GENDER},PNUM=#{PNUM},ZCODE=#{ZCODE},ADDR=#{ADDR} 
	</update>

	<select id="selectMember" parameterType="String" resultType="memberDto">
		SELECT * FROM BOARD_MEMBER 
			WHERE ID=#{ID}
	</select>

	<select id="selectAllMember" resultType="memberDto">
		SELECT * FROM BOARD_MEMBER
	</select>
</mapper>